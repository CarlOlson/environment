#!/usr/bin/env zsh

chpwd_functions=(chpwd_nix_shell)

HISTSIZE=$((1_000_000))
SAVEHIST=$((1_000_000))
SHELL_SESSION_HISTORY=0
ZSH_AUTOSUGGEST_ACCEPT_WIDGETS=(end-of-line)
ZSH_AUTOSUGGEST_PARTIAL_ACCEPT_WIDGETS=(forward-word forward-char emacs-forward-word)
ZSH_AUTOSUGGEST_STRATEGY=(match_prev_cmd)
ZSH_AUTOSUGGEST_USE_ASYNC=true
ZSH_HIGHLIGHT_STYLES[bracket-level-1]='fg=black,bold'
ZSH_HIGHLIGHT_STYLES[bracket-level-2]='fg=black,bold'
ZSH_HIGHLIGHT_STYLES[bracket-level-3]='fg=black,bold'
ZSH_HIGHLIGHT_STYLES[bracket-level-4]='fg=black,bold'

export ALTERNATE_EDITOR=''
export EDITOR='emacsclient'
export FZF_CTRL_T_COMMAND='fd --type f'
export FZF_DEFAULT_COMMAND='fd --type f'
export HEX_HTTP_CONCURRENCY=1
export HEX_HTTP_TIMEOUT=60
export SPELL='aspell -x -c'
