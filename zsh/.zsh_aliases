# nix
alias ns=$'nix-shell --command \'exec zsh; return\''

# file location
alias find='noglob find'
alias rl='readlink -f'
alias ls='EXA_GRID_ROWS=$(($LINES > 10 ? $LINES - 10 : $LINES)) exa --git --classify --grid'
alias la='EXA_GRID_ROWS=$(($LINES > 10 ? $LINES - 10 : $LINES)) exa --git --classify --grid --all'
alias  l='EXA_GRID_ROWS=$(($LINES > 10 ? $LINES - 10 : $LINES)) exa --git --classify --grid --all --long'
alias lg='EXA_GRID_ROWS=$(($LINES > 10 ? $LINES - 10 : $LINES)) exa --git --classify --grid --all --long --git-ignore'

# tree commands
alias tree='exa --tree --git-ignore'
alias    t='exa --tree --git-ignore --level=2'
alias   tg='exa --tree              --level=2'
alias   tt='exa --tree --git-ignore --level=3'
alias  ttt='exa --tree --git-ignore --level=4'
alias tttt='exa --tree --git-ignore --level=5'

# file editing
alias fpp='FPP_EDITOR=$EDITOR fpp'
alias mg='mg -n'
alias untab='sed -i -e $'\''s/ / /g'\'' -e $'\''s/ \+$//g'\'

# git
alias gi='git update-index --skip-worktree'
alias gs='git status'
alias gst='git stash'
alias gnuke='git clean -xfd'
alias gara='git commit --amend --reset-author --no-edit'
alias glu='git pull upstream $(git_current_branch)'
alias glup='glu && gp'

# zsh
alias zmv='noglob zmv'
alias zcp='noglob zmv -C'
alias zln='noglob zmv -L'
alias zsy='noglob zmv -Ls'

# emacs
alias ect='emacsclient -tty'
alias ecw='emacsclient --create-frame'
alias emacs_tangle_init='emacs -Q -nw --load ~/git/environment/pre-tangle.el --file ~/git/environment/init.org -f org-babel-tangle -f kill-emacs'

# downloads
alias unrar='unrar x'
alias unzip='noglob unzip'
alias plowdown='noglob plowdown'

# pairing
alias add-pair='gh-auth add --command="LANG='en_US.UTF-8' $( which tmux ) -u attach -t pair" --users'
alias pair='SHELL=/bin/zsh tmux -u new-session -s pair'

# multimedia
alias lain='say -v whisper "present day, present time."'
alias mpv='mpv --demuxer-readahead-secs=60'
alias kha='node ~/git/Kha/make.js'
alias f='noglob find . -iname'
alias ffmpeg='ffmpeg -loglevel warning -hide_banner'

alias k='kubectl'
alias dockly='npx dockly'
alias w='noglob curl wttr.in?format=3'
alias ww='noglob curl wttr.in?format=v2'
alias fd='fd --exclude=/mnt --exclude=/dev --exclude=/sys'
